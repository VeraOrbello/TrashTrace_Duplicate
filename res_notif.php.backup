    <script>
        // Filter notifications
        document.querySelectorAll('.filter-btn').forEach(button => {
            button.addEventListener('click', function() {
                // Remove active class from all buttons
                document.querySelectorAll('.filter-btn').forEach(btn => {
                    btn.classList.remove('active');
                });
                
                // Add active class to clicked button
                this.classList.add('active');
                
                const filter = this.getAttribute('data-filter');
                filterNotifications(filter);
            });
        });
        
        function filterNotifications(filter) {
            const notifications = document.querySelectorAll('.notification-item');
            
            notifications.forEach(notification => {
                const isUnread = notification.classList.contains('unread');
                const type = notification.getAttribute('data-type');
                
                let show = true;
                
                switch(filter) {
                    case 'unread':
                        show = isUnread;
                        break;
                    case 'today':
                        // Simple today filter (in production would check dates)
                        show = Math.random() > 0.5; // Demo
                        break;
                    case 'week':
                        // Simple week filter
                        show = true;
                        break;
                    case 'important':
                        show = type === 'warning' || type === 'error';
                        break;
                }
                
                notification.style.display = show ? 'flex' : 'none';
            });
        }
        
        // Mark as read
        document.querySelectorAll('.mark-read').forEach(button => {
            button.addEventListener('click', function() {
                const notificationId = this.getAttribute('data-id');
                const notification = this.closest('.notification-item');
                
                // Remove unread class
                notification.classList.remove('unread');
                
                // Remove the mark-read button
                this.remove();
                
                // Update unread count
                updateUnreadCount();
                
                showToast('Notification marked as read', 'success');
            });
        });
        
        // Mark all as read
        document.getElementById('markAllRead').addEventListener('click', function() {
            document.querySelectorAll('.notification-item.unread').forEach(notification => {
                notification.classList.remove('unread');
                const markReadBtn = notification.querySelector('.mark-read');
                if (markReadBtn) {
                    markReadBtn.remove();
                }
            });
            
            updateUnreadCount();
            showToast('All notifications marked as read', 'success');
        });
        
        // Delete notification
        document.querySelectorAll('.delete-notification').forEach(button => {
            button.addEventListener('click', function() {
                const notificationId = this.getAttribute('data-id');
                const notification = this.closest('.notification-item');
                
                if (confirm('Delete this notification?')) {
                    notification.style.animation = 'slideOutRight 0.3s ease-out';
                    setTimeout(() => {
                        notification.remove();
                        updateNotificationCounts();
                        showToast('Notification deleted', 'success');
                    }, 300);
                }
            });
        });
        
        // Refresh notifications
        document.getElementById('refreshNotifications').addEventListener('click', function() {
            showToast('Refreshing notifications...', 'info');
            setTimeout(() => {
                location.reload();
            }, 500);
        });
        
        // Check for updates
        document.getElementById('checkForUpdates')?.addEventListener('click', function() {
            showToast('Checking for new notifications...', 'info');
            // In production, this would make an API call
            setTimeout(() => {
                showToast('No new notifications found', 'info');
            }, 1000);
        });
        
        // Update notification counts
        function updateNotificationCounts() {
            const totalNotifications = document.querySelectorAll('.notification-item').length;
            const unreadCount = document.querySelectorAll('.notification-item.unread').length;
            
            // Update stats display (simplified for demo)
            console.log('Total:', totalNotifications, 'Unread:', unreadCount);
        }
        
        // Update unread count
        function updateUnreadCount() {
            const unreadCount = document.querySelectorAll('.notification-item.unread').length;
            // In production, update the unread count in the stats card
            console.log('Unread count:', unreadCount);
        }
        
        // Toast notification function
        function showToast(message, type = 'info') {
            const toast = document.createElement('div');
            toast.className = `toast toast-${type}`;
            toast.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 
                                 type === 'error' ? 'exclamation-circle' : 
                                 type === 'warning' ? 'exclamation-triangle' : 'info-circle'}"></i>
                <span>${message}</span>
            `;
            
            document.body.appendChild(toast);
            
            // Auto remove after 3 seconds
            setTimeout(() => {
                toast.style.opacity = '0';
                toast.style.transform = 'translateX(100%)';
                setTimeout(() => toast.remove(), 300);
            }, 3000);
            
            // Click to dismiss
            toast.addEventListener('click', () => {
                toast.style.opacity = '0';
                toast.style.transform = 'translateX(100%)';
                setTimeout(() => toast.remove(), 300);
            });
        }
        
        // Add CSS animations
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideOutRight {
                from {
                    transform: translateX(0);
                    opacity: 1;
                }
                to {
                    transform: translateX(100%);
                    opacity: 0;
                }
            }
        `;
        document.head.appendChild(style);
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            updateNotificationCounts();
        });
    </script>
</body>
</html>